


    <script type="text/javascript">
        var ExpanderImage = '<%= ConfigurationSettings.AppSettings["ExpanderImage"].ToString() %>';
        var ExpanderImageDescription = '<%= ConfigurationSettings.AppSettings["ExpanderImageDescription"].ToString() %>';
        var CollapserImage = '<%= ConfigurationSettings.AppSettings["CollapserImage"].ToString() %>';
        var RunLogoImage = '<%= ConfigurationSettings.AppSettings["RunLogoImage"].ToString() %>';
        var HelpLogoImage = '<%= ConfigurationSettings.AppSettings["HelpLogoImage"].ToString() %>';
        var RunLogoImageAlternateText = '<%= ConfigurationSettings.AppSettings["RunLogoImageAlternateText"].ToString() %>';
        var HelpLogoImageAlternateText = '<%= ConfigurationSettings.AppSettings["HelpLogoImageAlternateText"].ToString() %>';
        
        function ShowHideDiv() {
            if (document.getElementById("pDataBrowserIntro2").style.display == "none") {
                document.getElementById("pDataBrowserIntro2").style.display = "block";
                document.getElementById("imgExpand").alt = "Hide Details";
                document.getElementById("imgExpand").src = CollapserImage;
            }
            else {
                document.getElementById("pDataBrowserIntro2").style.display = "none";
                document.getElementById("imgExpand").alt = "Show Details";
                document.getElementById("imgExpand").src = ExpanderImage;
            }
        }
    </script>

