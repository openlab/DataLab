    <div>
        <h1>Data Browser</h1>
        
        <p class="big">
            @ConfigurationSettings.AppSettings["DataBrowserIntro1"].ToString()              
            <a href="javascript:ShowHideDiv();">                    
                                
                <script type="text/javascript">
                    document.write('<img id="imgExpand" src="' + ExpanderImage + '" alt="Show Details.." longdesc="' + ExpanderImageDescription + '"/>');
                </script>
            </a>
        </p>
        <p class="big" id="pDataBrowserIntro2" style="display:none">                     
            @ConfigurationSettings.AppSettings["DataBrowserIntro2"].ToString()            
        </p>
    </div>
    
    <table>
        <tr>
            <td class="leftcolumn">
                <b>Entity Set</b>:
            </td>
            <td colspan="2">
                <label title="labelEntitySet" class="maintext">@ViewData["EntitySet"]</label>                
            </td>
        </tr>
        <tr>
            <td class="leftcolumn">
                <b>Base Query</b>:
            </td>
            <td colspan="2">
                <label title="labelBaseQuery" class="maintext">@ViewData["BaseQuery"]</label>                
            </td>
        </tr>
        <tr>
            <td class="leftcolumn">
                <b>Filter Expression</b>:
                <br/>
                <b>($filter)</b>
            </td>
            <td>
                <textarea id="queryBox" class="nice" style="width:580px; height:48px;"></textarea>
            </td>
            <td>
                <table>
                    <tr>
                        <td>
                            <script type="text/javascript">
                                document.write("<img id='helpButton' src='" + HelpLogoImage + "' alt='" + HelpLogoImageAlternateText + "' class='filterhints' /> ");               
                            </script>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <script type="text/javascript">
                                document.write("<img id='runButton' src='" + RunLogoImage + "' style='width:80px;' alt='" + RunLogoImageAlternateText + "' /> ");               
                            </script>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                &nbsp;
            </td>
        </tr>
    </table>

